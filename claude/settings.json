{
  "$schema": "https://claude.ai/code/settings.schema.json",
  "model": "haiku",
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(docker ps:*)",
      "Bash(docker logs:*)",
      "Bash(docker images:*)",
      "Bash(docker inspect:*)",
      "Bash(docker stats:*)",
      "Bash(docker network ls:*)",
      "Bash(docker volume ls:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Bash(gh workflow:*)",
      "Bash(gh run:*)",
      "Bash(systemctl status:*)",
      "Bash(systemctl list-units:*)",
      "Bash(journalctl:*)",
      "Bash(uptime:*)",
      "Bash(free:*)",
      "Bash(df:*)",
      "Bash(cat /proc/loadavg:*)",
      "Bash(dig:*)",
      "Bash(nslookup:*)",
      "Bash(curl -s ifconfig.me:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(whoami:*)",
      "Bash(date:*)"
    ],
    "ask": [
      "Edit",
      "Write",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(docker build:*)",
      "Bash(docker run:*)",
      "Bash(docker stop:*)",
      "Bash(docker rm:*)",
      "Bash(docker rmi:*)",
      "Bash(docker compose:*)",
      "Bash(docker exec:*)",
      "Bash(docker pull:*)",
      "Bash(docker push:*)",
      "Bash(systemctl start:*)",
      "Bash(systemctl stop:*)",
      "Bash(systemctl restart:*)",
      "Bash(systemctl enable:*)",
      "Bash(systemctl disable:*)",
      "Bash(certbot:*)",
      "Bash(npm:*)",
      "Bash(pip:*)",
      "Bash(python:*)",
      "Bash(node:*)"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Bash(rm -rf /)",
      "Bash(dd if=:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(parted:*)",
      "Bash(curl:* | bash)",
      "Bash(curl:* | sh)",
      "Bash(wget:* | bash)",
      "Bash(wget:* | sh)",
      "Bash(chmod 777:*)",
      "Bash(sudo su:*)",
      "Bash(passwd:*)",
      "Bash(useradd:*)",
      "Bash(userdel:*)",
      "Bash(visudo:*)",
      "Read(.ssh/**)",
      "Read(.aws/**)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/secrets/**)",
      "Read(**/.secrets/**)",
      "Read(**/credentials*)",
      "WebFetch"
    ],
    "additionalDirectories": [
      "/var/log",
      "/etc/nginx",
      "/etc/systemd"
    ]
  },
  "env": {
    "ENVIRONMENT": "vps",
    "VPS_MODE": "true",
    "DISABLE_TELEMETRY": "1"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/session-init.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(docker:*)|Bash(systemctl:*)|Bash(git push:*)",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/pre-deploy.sh",
            "timeout": 10000
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/protect-critical.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/audit-log.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/statusline-vps.sh"
  }
}
